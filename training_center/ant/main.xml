<?xml version="1.0"?>

<project default="all" basedir="." name="training_center">

	<property file="main.properties"/>

	<target name="initdb">
	    <ant antfile="${db.dir}/build.xml"/>
	</target>

	<target name = "build">
		<ant antfile = "${src.dir}/build.xml"/>
	</target>

	<target name = "clean">
	    <delete failonerror = "false" includeemptydirs="true">
		    <fileset dir = "${build.dir}">
		        <include name = "**/*.class"/>
		    </fileset>
	    </delete>
	    <delete dir="${build.dir}"/>
	</target>

	<target name = "all" depends = "clean, initdb, build"/>
  
</project>
