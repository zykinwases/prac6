<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="database.Course" table="course">
		<id column="course_id" name="id" type="java.lang.Long">
			<generator class="increment"/>
		</id>
		<property column="course_name" name="name" type="java.lang.String"/>
		<property column="duration" name="duration" type="org.postgresql.util.PGInterval"/>
		<property column="intense" name="intense" type="org.postgresql.util.PGInterval"/>
		<property column="relevance" name="isActual" type="java.lang.Boolean"/>
		<many-to-one name="professor_id" column="professor_id" class="database.Professor"/>
		<set name="students" lazy="false">
			<key column="student_id"/>
			<many-to-many class="database.Student"/>
		</set>
		<set name="lessons" lazy="false">
			<key column="course_id"/>
			<one-to-many class="database.Lesson"/>
		</set>
	</class>
</hibernate-mapping>